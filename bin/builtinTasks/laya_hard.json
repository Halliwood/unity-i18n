{
    "searchTasks": [
        {
            "roots": [
                "bin/view"
            ],
            "option": {
                "includes": {
                    "exts": [
                        ".json"
                    ]
                }
            }
        },
        {
            "roots": [
                "src"
            ],
            "option": {
                "excludes": {
                    "dirs": [
                        "automatic/cfgs",
                        "automatic/protocol"
                    ],
                    "files": [
                        "TestView.ts",
                        "Macros.ts",
                        "ErrorId.ts"
                    ]
                },
                "includes": {
                    "exts": [
                        ".ts"
                    ]
                },
                "skipPatterns": [
                    "^\\s*console\\.log",
                    "^\\s*FyGame\\.log",
                    "^\\s*console\\.assert(",
                    "^\\s*FyGame\\.assert\\("
                ]
            }
        },
        {
            "roots": [
                "$workspace/clientcfg"
            ],
            "option": {
                "includes": {
                    "exts": [
                        ".xml"
                    ]
                },
                "excludes": {
                    "files": [
                        "WorldName.xml",
                        "RobotNameConfig.xml",
                        "NewbieTutorial.config.xml"
                    ]
                }
            }
        },
        {
            "roots": [
                "$workspace/serverscript"
            ],
            "option": {
                "includes": {
                    "exts": [
                        ".cxx",
                        ".atm"
                    ]
                },
                "skipPatterns": [
                    "^\\s*ATM_DebugSystemMessage\\("
                ]
            }
        },
        {
            "roots": [
                "$workspace/servercfg"
            ],
            "option": {
                "includes": {
                    "exts": [
                        ".xml"
                    ]
                },
                "excludes": {
                    "files": [
                        "WorldName.xml",
                        "RobotNameConfig.xml",
                        "NewbieTutorial.config.xml"
                    ]
                }
            }
        }
    ],
    "replaceTasks": [
        {
            "roots": [
                "bin/view"
            ],
            "option": {
                "includes": {
                    "exts": [
                        ".json"
                    ]
                }
            }
        },
        {
            "roots": [
                "src"
            ],
            "option": {
                "excludes": {
                    "dirs": [
                        "automatic/cfgs",
                        "automatic/protocol"
                    ],
                    "files": [
                        "TestView.ts",
                        "Macros.ts",
                        "ErrorId.ts"
                    ]
                },
                "includes": {
                    "exts": [
                        ".ts"
